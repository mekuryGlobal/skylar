<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idSendLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/idScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send "
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-3dp"
            android:text="cancel "
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp">

        <TextView

            android:id="@+id/txtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="from:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/senderLayout"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/idRLCurrency"
                android:layout_width="300dp"
                android:layout_height="72dp"
                android:layout_marginStart="24dp">

                <com.lelloman.identicon.view.ClassicIdenticonView
                    android:id="@+id/userIdenticon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:hash="23584505"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/account_1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/send_account_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:text="Balance: 0456.33XLM"
                    android:textColor="@color/black"
                    android:textSize="14sp" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>

            </LinearLayout>


    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp">

        <TextView

            android:id="@+id/txttO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="to:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/receiverLayout"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <EditText
                android:id="@+id/receiverAddress"
                android:layout_width="300dp"
                android:layout_height="72dp"
                android:layout_marginStart="24dp"
                android:hint="Search,public address (0x)"
                android:textSize="14sp"/>


        </androidx.cardview.widget.CardView>





    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/bottomBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/confirmBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="next"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                />

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>
